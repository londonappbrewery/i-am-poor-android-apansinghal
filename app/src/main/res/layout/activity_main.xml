<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/text_iam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_am_text"
        android:textColor="#444444"
        android:textSize="40sp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poor"
        android:textColor="#222222"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/text_iam"
        android:layout_toRightOf="@id/text_iam"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/image_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coal"
        android:layout_centerInParent="true"/>
</RelativeLayout>
